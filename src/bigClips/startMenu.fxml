                  <Font name="JourneyPS3 Regular" size="50.0" />
              </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <effect>
            <DropShadow blurType="GAUSSIAN" color="#000000b4" />
         </effect>
          </Text>
    </children>
</AnchorPane>
