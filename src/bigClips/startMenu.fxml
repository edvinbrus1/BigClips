        <Text fill="WHITE" layoutX="153.0" layoutY="142.0" strokeType="OUTSIDE" strokeWidth="0.0" text="BIG-CLIPS">
            <font>
                <Font name="JourneyPS3 Regular" size="100.0" />
            </font>
         <effect>
            <DropShadow color="#000000b2" />
         </effect>
        </Text>
          <Text fx:id="btnPlay" fill="WHITE" layoutX="335.0" layoutY="288.0" onMouseClicked="#playClicked" strokeType="OUTSIDE" strokeWidth="0.0" text="PLAY">
